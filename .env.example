# Global Footprint Network Pipeline - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# GFN API Configuration (Required)
# =============================================================================
# Get your API key from: http://data.footprintnetwork.org/#/api
GFN_API_KEY=your_api_key_here
GFN_API_BASE_URL=https://api.footprintnetwork.org/v1
GFN_API_USERNAME=any-user-name

# =============================================================================
# Output Configuration
# =============================================================================
OUTPUT_MODE=local  # local | s3
LOCAL_OUTPUT_DIR=./data

# =============================================================================
# AWS S3 Configuration (for production deployment)
# =============================================================================
S3_BUCKET=your-bucket-name
S3_PREFIX=gfn
AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# =============================================================================
# DuckDB Configuration (for local testing)
# =============================================================================
DUCKDB_PATH=./gfn.duckdb

# =============================================================================
# Snowflake Configuration (target database)
# =============================================================================
SNOWFLAKE_ACCOUNT=your_account
SNOWFLAKE_USER=your_user
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=GFN
SNOWFLAKE_SCHEMA=RAW

# =============================================================================
# Extraction Parameters
# =============================================================================
START_YEAR=2010
END_YEAR=2024
