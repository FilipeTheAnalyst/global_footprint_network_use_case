# =============================================================================
# GFN Pipeline Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Pipeline Configuration
# -----------------------------------------------------------------------------
# Destination for data loading: duckdb | snowflake | s3
GFN_DESTINATION=duckdb

# Enable debug mode (verbose logging)
GFN_DEBUG=false

# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# AWS Configuration (LocalStack)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# LocalStack endpoint (for local development)
LOCALSTACK_ENDPOINT=http://localhost:4566

# S3 bucket names
S3_DATA_BUCKET=gfn-data-lake
S3_ARTIFACTS_BUCKET=gfn-artifacts

# SQS queue names
SQS_EXTRACT_QUEUE=gfn-extract-queue
SQS_TRANSFORM_QUEUE=gfn-transform-queue

# SNS topic for alerts
SNS_ALERTS_TOPIC=gfn-alerts

# -----------------------------------------------------------------------------
# Snowflake Configuration
# -----------------------------------------------------------------------------
# Used by: pipeline, Soda data quality checks
SNOWFLAKE_ACCOUNT=your-account.region
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=GFN
SNOWFLAKE_SCHEMA=RAW
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_ROLE=ACCOUNTADMIN

# -----------------------------------------------------------------------------
# DuckDB Configuration (Local Testing)
# -----------------------------------------------------------------------------
DUCKDB_PATH=./data/gfn_local.duckdb

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# -----------------------------------------------------------------------------
# Observability Configuration
# -----------------------------------------------------------------------------
# CloudWatch (AWS-native) - no additional config needed, uses AWS credentials
# X-Ray tracing is enabled by default in Lambda

# Soda data quality checks use the Snowflake credentials above

# -----------------------------------------------------------------------------
# GFN API Configuration
# -----------------------------------------------------------------------------
# Global Footprint Network API base URL
GFN_API_BASE_URL=https://api.footprintnetwork.org/v1

# API key (if required)
GFN_API_KEY=

# Rate limiting (requests per minute)
GFN_API_RATE_LIMIT=60

# -----------------------------------------------------------------------------
# Pipeline Schedule (Cron Expression)
# -----------------------------------------------------------------------------
# Default: Run daily at 2 AM UTC
PIPELINE_SCHEDULE_CRON=0 2 * * *
